{
  "name": "ui",
  "version": "0.1.2",
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "clean": "rimraf ./dist",
    "dev": "concurrently \"tsup src/index.tsx --format esm,cjs --dts --external react --watch\" \"tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch\" \"yarn ladle serve\"",
    "fix": "eslint src --fix",
    "lint": "eslint src",
    "story": "ladle serve"
  },
  "dependencies": {
    "@ladle/react": "^2.4.5",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "class-variance-authority": "^0.3.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.28.0",
    "eslint-config-custom": "*",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-config": "*",
    "tailwindcss": "^3.2.4",
    "tsconfig": "*",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "@types/node": "latest",
    "next": "^13.0.6"
  }
}
